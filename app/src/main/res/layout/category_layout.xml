<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        android:id="@+id/category_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp">

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/laptop">
        </ImageView>

        <ImageView
            android:id="@+id/phone"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/phone">
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_layout_1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Laptop"
            android:textSize="18sp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="18sp"

            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_layout_1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/konsol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/konsol">
        </ImageView>
        <ImageView
            android:id="@+id/tshirt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tshirt">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_name_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_layout_2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Console"
            android:textSize="18sp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clothing"
            android:textSize="18sp"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

</RelativeLayout>